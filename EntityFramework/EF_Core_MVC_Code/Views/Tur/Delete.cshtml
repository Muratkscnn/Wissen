@model EF_Core_MVC_Code.Models.Turler

@{
    ViewData["Title"] = "Delete";
}
<h1>Kitap Detayları</h1>

<div>
    <h5>Tür ID:</h5>
    <p>@Model.Id</p>
    <h5>Kitap Türü</h5>
    <p>@Model.TurAd</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id">
    <input type="submit" value="SİL" class="btn btn-danger">
</form>