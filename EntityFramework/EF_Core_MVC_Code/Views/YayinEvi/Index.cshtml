@model List<EF_Core_MVC_Code.Models.Yayinevleri>;
@{
    ViewData["Title"] = "Index";
}
<h1>Yayın Evleri Listesi</h1>
<a asp-action="Create">Yayın Evi Ekle</a>
<table class="table table-dark w-50">
    <thead>
        <tr>
            <th>ID</th>
            <th>Yayin Evi Adı</th>
            <th>Yapılacak İşlemler</th>
        </tr>   
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Ad</td>
                <td>    
                        <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Detay</a>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>  
                </td>
                
            </tr>
        }
        
    </tbody>
</table>