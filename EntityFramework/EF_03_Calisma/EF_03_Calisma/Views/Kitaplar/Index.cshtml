@model IEnumerable<EF_03_Calisma.Models.Kitaplar>

@{
    ViewData["Title"] = "Index";
}

<h1>Kitaplar</h1>

<p>
    <a asp-action="Create">Yeni Kayıt Ekle</a>
</p>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SayfaSayisi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stok)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YayinEvi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Yazar)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SayfaSayisi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stok)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tur.TurAd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YayinEvi.Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Yazar.AdSoyad)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Isbn">Edit</a>
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Isbn">Details</a>
                <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Isbn">Delete</a>
            </td>  
        </tr>
}
    </tbody>
</table>
