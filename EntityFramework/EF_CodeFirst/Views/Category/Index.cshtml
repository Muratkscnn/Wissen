@model List<EF_CodeFirst.Models.Entities.Category>
@{
    ViewData["Title"] = "Kitap Türleri";
}
<h1>Kitap Türleri</h1>
<a asp-action="Create">Yeni Kitap Türü</a>
<table class="table table-dark w-50 ">
    <thead>
        <tr>
            <th>Tür ID</th>
            <th>Tür Adı</th>
            <th >Yapılacak İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            {
                <tr>
                    <td>@item.CategoryId</td>
                    <td>@item.CategoryName</td>
                    <td >
                        <a class="btn btn-success" asp-action="Details" asp-route-id="@item.CategoryId">Detay</a>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.CategoryId">Düzenle</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CategoryId">Sil</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>