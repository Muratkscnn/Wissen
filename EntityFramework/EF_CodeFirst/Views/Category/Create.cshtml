@model EF_CodeFirst.Models.Entities.Category
@{
    ViewData["Title"] = "Create";
}
<h1 class="display-3">Kitap Türü Ekleme</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label class="control-label"> Kitap Türü</label>
                <input type="text" asp-for="CategoryName" class="form-control">
                <label class="control-label">Tür İçeriği</label>
                <input type="text" asp-for="CategoryDescription" class="form-control">
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-success">
                <a asp-action="Index" class="btn btn-danger">Geri</a>
            </div>
        </form>
    </div>
</div>