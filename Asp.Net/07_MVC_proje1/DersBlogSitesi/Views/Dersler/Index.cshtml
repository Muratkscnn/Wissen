@model List<DersBlogSitesi.Models.Lesson>

<table class="table table-dark table-striped table-hover text-white w-75 mx-auto">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">LessonName</th>
            <th scope="col">Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.ID</th>
                    <td>@item.LessonName</td>
                    <td>@item.Category</td>
                    <td><button class="btn btn-primary">Derse Git</button></td>
                </tr>
            }
        }



    </tbody>
</table>